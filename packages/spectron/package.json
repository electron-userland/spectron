{
  "name": "@goosewobbler/spectron",
  "version": "17.0.0-alpha3",
  "description": "Easily test your Electron apps using ChromeDriver and WebdriverIO.",
  "main": "./dist/index.js",
  "types": "./spectron.d.ts",
  "bin": {
    "spectron": "./bin/spectron.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/lib/*"
  },
  "scripts": {
    "clean": "cross-env rm -rf ./node_modules ./dist",
    "clean:dist": "cross-env rm -rf ./dist",
    "build": "pnpm run build:typescript-references-hack && tsc -b lib test && pnpm run build:copy-docs",
    "build:typescript-references-hack": "cross-env mkdir -p ./dist/common && cross-env cp ../../common/types.ts ./dist/common/types.d.ts",
    "build:copy-docs": "cross-env cp ../../README.md ./ && cp ../../LICENSE ./",
    "lint": "eslint --ignore-path ../../.eslintignore \"**/*.{j,t}s\"",
    "prettier:write": "prettier --write \"**/*.{j,t}s\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch-coverage": "jest --watch --coverage",
    "test": "pnpm run test:coverage"
  },
  "engines": {
    "node": ">=14.17.1"
  },
  "repository": "https://github.com/goosewobbler/spectron",
  "keywords": [
    "electron",
    "chromedriver",
    "webdriverio",
    "selenium"
  ],
  "author": "Sam Maister",
  "license": "MIT",
  "dependencies": {
    "@wdio/cli": "^7.16.2",
    "@wdio/local-runner": "^7.16.2",
    "chromedriver": "^94.0.0",
    "electron": "^15.3.0",
    "electron-chromedriver": "^15.0.0",
    "ts-node": "^10.3.1",
    "tsconfig-paths": "^3.11.0",
    "wdio-chromedriver-service": "^7.2.2",
    "webdriverio": "^7.16.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.10.1",
    "@types/jest": "^27.0.2",
    "jest": "^27.3.1",
    "jest-mock-extended": "^2.0.4",
    "ts-jest": "^27.0.7"
  },
  "resolutions": {
    "@types/node": "^14.0.0"
  }
}
