{
  "name": "@goosewobbler/spectron",
  "version": "17.0.0-alpha3",
  "description": "Easily test your Electron apps using ChromeDriver and WebdriverIO.",
  "main": "./dist/index.js",
  "types": "./spectron.d.ts",
  "bin": {
    "spectron": "./bin/spectron.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/lib/*"
  },
  "scripts": {
    "clean": "cross-env rm -rf ./node_modules ./dist",
    "clean:dist": "cross-env rm -rf ./dist",
    "build": "pnpm run build:typescript-references-hack && tsc -b lib test",
    "build:typescript-references-hack": "cross-env mkdir -p ./dist/common && cross-env cp ../../common/types.ts ./dist/common/types.d.ts",
    "lint": "eslint --ignore-path ../../.eslintignore \"**/*.{j,t}s\"",
    "prettier:write": "prettier --write \"**/*.{j,t}s\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch-coverage": "jest --watch --coverage",
    "test": "pnpm run test:coverage"
  },
  "engines": {
    "node": ">=14.17.1"
  },
  "repository": "https://github.com/goosewobbler/spectron",
  "keywords": [
    "electron",
    "chromedriver",
    "webdriverio",
    "selenium"
  ],
  "author": "Sam Maister",
  "license": "MIT",
  "dependencies": {
    "@wdio/cli": "^7.12.4",
    "@wdio/local-runner": "^7.12.4",
    "chromedriver": "^93.0.1",
    "electron": "^14.0.0",
    "electron-chromedriver": "^14.0.0",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "wdio-spectron-service": "*",
    "webdriverio": "^7.12.4"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.5.0"
  },
  "resolutions": {
    "@types/node": "^14.0.0"
  },
  "files": [
    "dist",
    "bin",
    "./main.js",
    "./preload.js",
    "./main.d.ts",
    "./preload.d.ts",
    "./spectron.d.ts"
  ]
}
