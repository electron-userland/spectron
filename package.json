{
  "private": true,
  "workspaces": [
    "packages/*",
    "test/*"
  ],
  "description": "Make sure all your stores are on the same page",
  "author": "Sam Maister",
  "repository": "https://github.com/goosewobbler/spectron",
  "bugs": "https://github.com/goosewobbler/spectron/issues",
  "type": "module",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base-typescript": "^1.0.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "init": "npm install -g pnpm && pnpm i",
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run -r build",
    "lint": "pnpm run -r lint",
    "clean": "pnpm run -r clean",
    "format": "prettier --ignore-path .gitignore --write .",
    "smoke-test": "pnpm run --filter @goosewobbler/spectron-e2e test",
    "unit-test": "pnpm run --filter @goosewobbler/spectron test",
    "test": "pnpm run -r test",
    "ci": "pnpm run --filter @goosewobbler/spectron build && pnpm run --filter @goosewobbler/spectron-e2e build && pnpm run test && pnpm run lint"
  }
}
